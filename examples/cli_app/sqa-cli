#!/usr/bin/env ruby
# frozen_string_literal: true

# SQA CLI - Unified command-line interface for SQA features
#
# Usage:
#   sqa-cli <command> [options]
#
# Commands:
#   backtest     Run strategy backtests
#   genetic      Evolve strategy parameters with genetic programming
#   pattern      Discover profitable patterns
#   kbs          Run knowledge-based strategy
#   stream       Real-time price streaming
#   analyze      Analyze stocks with various methods
#   optimize     Portfolio optimization
#   help         Show this help message
#
# Examples:
#   sqa-cli backtest --ticker AAPL --strategy RSI
#   sqa-cli genetic --ticker AAPL --generations 50
#   sqa-cli pattern --ticker AAPL --min-gain 10
#

require_relative 'lib/cli'

CLI.run(ARGV)
